{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "BREVO_API_KEY": "@brevo_api_key",
    "ADMIN_EMAIL": "@admin_email",
    "FROM_EMAIL": "@from_email",
    "FROM_NAME": "@from_name",
    "SITE_URL": "@site_url"
  }
}

